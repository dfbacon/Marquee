<h2>New Review for <u><%= @movie.title %></u></h2><br>
<%= form_for @review, url: movie_reviews_path do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h3>
      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <div id="star-rating"></div>
  </div>
  <div class="field">
    <%= f.text_area :body, size: '100x25' %><br><br>
    <%= f.label :rating %>
    <%= f.number_field :rating, in: 0..5, step: 1, :value => 0 %> out of 5<br><br>
  </div>
  <div class="actions">
    <%= f.submit 'Post Review', class: 'search_button'  %>
  </div>
<% end %>

<%= link_to 'Back', root_path(@movie), id: 'back_button'%>
